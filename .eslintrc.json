{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "strict": "error",
    "require-await": "error",
    "no-useless-return": "error",
    "no-else-return": "error",
    "no-return-await": "error",
    "no-var": "error",
    "no-useless-escape": "error",
    "no-console": [
      "error",
      {
        "allow": ["log", "warn", "error"]
      }
    ],
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "max-len": [
      "error",
      {
        "code": 80,
        "tabWidth": 2,
        "ignoreComments": true,
        "ignoreUrls": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true,
        "ignoreRegExpLiterals": true
      }
    ],
    "object-shorthand": [
      "error",
      "methods", 
      {
        "avoidExplicitReturnArrows": false
      }
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "prefer-const": [
      "error",
      {
        "destructuring": "any",
        "ignoreReadBeforeAssign": false
      }
    ],
    "no-useless-constructor": "error",
    "react/prop-types": 0,
    "react/display-name": 0,
    "react/no-unused-prop-types": 2,
    "react/no-unused-state": 2,
    "react/jsx-curly-spacing": [
      "warn",
      {
        "when": "always",
        "children": true
      }
    ],
    "react/jsx-indent": [
      "warn",
      2
    ],
    "react.require-optimization": "off"
  },
  "settings": {
    "react": {
      "version": "16.0"
    }
  }
}
